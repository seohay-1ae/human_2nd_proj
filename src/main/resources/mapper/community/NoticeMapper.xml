<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.travelquest.admin.dao.NoticeDAO">

    <!-- 전체 공지사항 목록 -->
    <select id="getNoticeList" resultType="com.project.travelquest.admin.vo.NoticeVO">
        SELECT NOTICE_ID, TITLE, CONTENT, REG_DATE
        FROM TB_NOTICE
        ORDER BY NOTICE_ID DESC
    </select>

    <!-- 단일 공지사항 상세 조회 -->
    <select id="getNoticeById" parameterType="int" resultType="com.project.travelquest.admin.vo.NoticeVO">
        SELECT NOTICE_ID, TITLE, CONTENT, REG_DATE
        FROM TB_NOTICE
        WHERE NOTICE_ID = #{noticeId}
    </select>

    <!-- 공지사항 등록 -->
    <insert id="insertNotice" parameterType="com.project.travelquest.admin.vo.NoticeVO">
        <selectKey keyProperty="noticeId" resultType="int" order="BEFORE">
            SELECT NOTICE_SEQ.NEXTVAL FROM DUAL
        </selectKey>
        INSERT INTO TB_NOTICE (NOTICE_ID, TITLE, CONTENT)
        VALUES (#{noticeId}, #{title}, #{content})
    </insert>

    <!-- 공지사항 수정 -->
    <update id="updateNotice" parameterType="com.project.travelquest.admin.vo.NoticeVO">
        UPDATE TB_NOTICE
        SET TITLE = #{title},
        CONTENT = #{content}
        WHERE NOTICE_ID = #{noticeId}
    </update>

    <!-- 공지사항 삭제 -->
    <delete id="deleteNotice" parameterType="int">
        DELETE FROM TB_NOTICE WHERE NOTICE_ID = #{noticeId}
    </delete>

</mapper>
