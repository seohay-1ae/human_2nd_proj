<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.travelquest.admin.dao.ReportDAO">

    <!-- 신고 등록 -->
    <insert id="insertReport" parameterType="com.project.travelquest.admin.vo.ReportVO">
        INSERT INTO tb_comu_report (post_id, reporter_id)
        VALUES (#{postId}, #{reporterId})
    </insert>

    <!-- 신고된 전체 게시글 리스트 조회 -->
    <select id="getReportList" resultType="com.project.travelquest.admin.vo.ReportVO">
        SELECT
        r.post_id,
        r.reporter_id,
        p.created_at,
        p.content,
        p.report_count
        FROM tb_comu_report r
        JOIN tb_comu_post p ON r.post_id = p.post_id
        ORDER BY p.created_at DESC
    </select>

    <select id="isAlreadyReported" resultType="int">
        SELECT COUNT(*)
        FROM tb_comu_report
        WHERE post_id = #{postId} AND reporter_id = #{reporterId}
    </select>

    <!-- 신고기록 삭제 -->
    <delete id="deleteReportsByPostId" parameterType="int">
        DELETE FROM tb_comu_report
        WHERE post_id = #{postId}
    </delete>


</mapper>